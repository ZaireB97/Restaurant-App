<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_main_food_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_food_main"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12dp" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_food_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_main_food_image"
            android:layout_toEndOf="@id/card_view_main_food_image"
            android:fontFamily="sans-serif-medium"
            android:padding="4dp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/text_view_food_description_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_food_title_main"
            android:layout_toEndOf="@id/card_view_main_food_image"
            android:fontFamily="sans-serif-light"
            android:padding="4dp"
            android:textColor="#555454"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_price_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_food_description_main"
            android:layout_toEndOf="@id/card_view_main_food_image"
            android:fontFamily="sans-serif-light"
            android:padding="4dp"
            android:textColor="#555454"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>